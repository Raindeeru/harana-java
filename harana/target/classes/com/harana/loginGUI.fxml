<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(from 50% 100% to 50% 0%, rgba(77,1,26,1) 0%, rgba(154,12,50,1) 100%);" stylesheets="@loginStyle.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.harana.LoginController">  
    <children>
 
        <Pane>
            <children>
                <Rectangle fx:id="backgroundRectangle" fill="#093754" height="330.0" width="400" />
                <VBox alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER" prefHeight="350.0" prefWidth="400.0">
                            <children>
                                <StackPane prefHeight="150.0" prefWidth="200.0">
                                    <children>
                                        <Circle fx:id="backgroundCircle"
                                        radius="200.0"
                                        translateY="-20"
                                        fill="linear-gradient(from 50% 100% to 50% 0%, rgba(118,8,39,1) 45%, rgba(204,18,66,1) 90%)" />
                                        <Circle fx:id="circleLogo" fill="#ef745b" radius="150.0" stroke="BLACK" strokeWidth="0.0" translateY="-20" />
                                        <ImageView fitHeight="200.0" fitWidth="200.0">
                                            <image>
                                                <Image url="@purple-heart.png" />
                                            </image>
                                        </ImageView>
                                    </children>
                                </StackPane>
                            </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets top="150.0" />
                     </padding>
                        </HBox>

                        <VBox alignment="CENTER" spacing="10">
                          <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0">
                               <children>
                                  <TextField fx:id="usernameTextField" promptText="Username" style="-fx-background-color: #ef745b;" />
                               </children>
                         </HBox>

                        <HBox alignment="CENTER" prefHeight="0.0" prefWidth="200.0">
                               <children>
                                    <TextField fx:id="passwordTextField" promptText="Password" style="-fx-background-color: #ef745b;" />
                              </children>
                          </HBox>

                          <HBox alignment="CENTER" prefHeight="0.0" prefWidth="200.0">
                                   <children>
                                     <Button mnemonicParsing="false" onAction="#loginBtn" style="-fx-background-color: #0c3a57;" text="Login" textFill="#ffffff" />
                               </children>
                                 </HBox>
                            </VBox>
                    </children>
                </VBox>
            </children>
        </Pane>
    </children>
   <padding>
      <Insets top="-80.0" />
   </padding>
</VBox>
