<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<StackPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.harana.datingPageController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="400.0">
         <children>
            <VBox alignment="CENTER" prefHeight="150.0" prefWidth="232.0">
               <children>
                  <ImageView fx:id="profileImage" fitHeight="110.0" fitWidth="97.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@IShowOten.jpg" />
                     </image>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </ImageView>
                  <Label fx:id="profileName" text="IShowOten" />
               </children>
            </VBox>
            <VBox alignment="CENTER" onMouseClicked="#CheckProfile" prefHeight="206.0" prefWidth="232.0">
               <children>
                  <Label text="Featured Song" />
                  <ImageView fx:id="albumCover" fitHeight="142.0" fitWidth="152.0" onMouseClicked="#CheckProfile" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Vinly%20Record.png" />
                     </image>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </ImageView>
                  <ProgressBar fx:id="progressBar" prefHeight="26.0" prefWidth="200.0" progress="0.0" />
                  <HBox prefHeight="22.0" prefWidth="232.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handlepreviousButton" prefHeight="26.0" prefWidth="50.0" text="⏮">
                           <HBox.margin>
                              <Insets left="5.0" right="5.0" />
                           </HBox.margin>
                        </Button>
                        
                        <Button fx:id="playButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#handlePlayButtonClick" prefHeight="26.0" prefWidth="42.0" text="▶">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Button>
                        
                        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handlenextButton" prefHeight="26.0" prefWidth="50.0" text="⏭">
                           <HBox.margin>
                              <Insets left="15.0" right="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="48.0" prefWidth="232.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <HBox alignment="CENTER" minWidth="-Infinity" prefHeight="46.0" prefWidth="84.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleChatButton" text="Chat" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" minWidth="-Infinity" prefHeight="46.0" prefWidth="67.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handledatingButtonClick" text="Home" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="46.0" prefWidth="104.0">
                           <children>
                              <Button fx:id="profileButton" alignment="CENTER" mnemonicParsing="false" onAction="#OpenUserProfile" text="Profile" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <HBox fx:id="matchNotif" prefHeight="100.0" prefWidth="200.0" visible="false">
         <children>
            <Label text="Match">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
</StackPane>
